<div id="productList">
    <h1>Productos por webSockets</h1>
        <input type="text" name="title" id="title" placeholder="title" value="">
        <input type="text" name="description" id="description" placeholder="description" value="">
        <input type="text" name="category" id="category" placeholder="category" value="">
        <input type="number" name="price" id="price" placeholder="price" value="">
        <input type="text" name="thumbnail" id="thumbnail" placeholder="thumbnail" value="">
        <input type="text" name="code" id="code" placeholder="code" value="">
        <input type="number" name="stock" id="stock" placeholder="stock" value="">
        <input type="text" name="status" id="status" placeholder="status" value="">
        <button id="boton">AGREGAR</button>
    {{#each products}}
    <div id="product-{{this.id}}">
        <p>-----------------------------------------</p>
        <p>Title: {{this.title}}</p>
        <p>Description: {{this.description}}</p>
        <p>Category: {{this.category}}</p>
        <p>Price: {{this.price}}</p>
        <img src="{{this.thumbnail}}" alt="{{this.title}}">
        <p>Code: {{this.code}}</p>
        <p>Stock: {{this.stock}}</p>
        <p>Status: {{this.status}}</p>
        <p>Id: {{this.id}}</p>
        <p>-----------------------------------------</p>
    </div>
    {{/each}}
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/public/js/index.js"></script>